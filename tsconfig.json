{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "importsNotUsedAsValues": "error",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/device",
      "@types/node",
      "@nuxtjs/firebase",
      "@nuxtjs/toast",
      "vuetify-dialog/types"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "functions"]
}
